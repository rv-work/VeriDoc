generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid())
  name            String
  email           String        @unique
  password        String
  dob             DateTime
  role            UserRole
  gender          Gender
  walletAddress   String        @unique
  subscription    Plan         @default(free)
}



model University {
  id                 String         @id @default(cuid())
  universityName     String
  type               UniversityType
  website            String
  registrationNumber String
  contactPerson      String
  designation        String
  phone              String
  email              String
  walletAddress      String         @unique
  isApproved         Boolean        @default(false)
}

enum UserRole {
  student
  institute
  admin
  other
}

enum Gender {
  male
  female
}

enum Plan {
  free
  basic
  premium
  enterprise
}

enum UniversityType {
  government
  private
  deemed
  autonomous
  central
  state
  other
}

